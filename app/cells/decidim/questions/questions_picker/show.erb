<div class="picker-header">
  <h1><%= t("questions_picker.choose_questions", scope: "decidim.questions") %></h1>
  <input type="text" name="questions-filter" id="questions_filter" placeholder="<%= t("decidim.admin.filters.search_placeholder.id_string_or_title_cont", collection: questions_collection_name) %>">
</div>
<div class="picker-content picker-list" data-picker-path="<%= picker_path %>" data-picker-more="<%= more_questions? %>">
  <%= render :questions %>
</div>
<div class="picker-footer">
  <div class="buttons button--double">
    <a class="button" data-close=""><%= t("questions_picker.close", scope: "decidim.questions") %></a>
  </div>
</div>

<%= javascript_include_tag "decidim/questions/admin/questions_picker" %>
