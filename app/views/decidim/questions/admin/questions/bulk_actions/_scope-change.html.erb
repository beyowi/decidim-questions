<div id="js-scope-change-questions-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_scope_questions_path, method: :post, remote: true, id: "js-form-scope-change-questions", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% questions.each do |question| %>
        <%= check_box_tag "question_ids[]", question.id, false, class: "js-check-all-question js-question-id-#{question.id}" %>
      <% end %>
    </div>

    <%= scopes_picker_tag(
          :scope_id,
          try(:current_participatory_space)&.scope,
          field: t("models.question.fields.scope", scope: "decidim.questions")
        ) %>

    <%= submit_tag(
          t("decidim.questions.admin.questions.index.update_scope_button"),
          id: "js-submit-scope-change-questions",
          class: "button small button--simple float-left"
        ) %>

    <button id="js-cancel-scope-change-questions" class="button tiny clear compact js-cancel-bulk-action" type="button">
      <%= t("decidim.questions.admin.questions.index.cancel") %>
    </button>
  <% end %>
</div>
