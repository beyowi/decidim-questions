<div id="js-publish-answers-actions" class="hide js-bulk-action-form">
  <%= form_tag(publish_answers_questions_path, method: :post, remote: true, id: "js-form-publish-answers", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% questions.each do |question| %>
        <%= check_box_tag "question_ids[]", question.id, false, class: "js-check-all-question js-question-id-#{question.id}" %>
      <% end %>
    </div>
    <p><%= t("decidim.questions.admin.questions.publish_answers.number_of_questions", number: '<span id="js-form-publish-answers-number"></span>').html_safe %></p>

    <%= submit_tag(t("decidim.questions.admin.questions.index.publish"), id: "js-submit-publish-answers", class: "button small button--simple float-left") %>

    <button id="js-cancel-publish-answers" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.questions.admin.questions.index.cancel") %></button>
  <% end %>
</div>
