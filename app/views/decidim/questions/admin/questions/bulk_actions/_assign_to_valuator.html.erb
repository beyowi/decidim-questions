<div id="js-assign-questions-to-valuator-actions" class="hide js-bulk-action-form">
  <%= form_tag(valuation_assignment_path, method: :post, id: "js-form-assign-questions-to-valuator", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% questions.each do |question| %>
        <%= check_box_tag "question_ids[]", question.id, false, class: "js-check-all-question js-question-id-#{question.id}" %>
      <% end %>
    </div>

    <%= bulk_valuators_select(current_participatory_space, t("decidim.questions.admin.questions.index.assign_to_valuator")) %>

    <%= submit_tag(t("decidim.questions.admin.questions.index.assign_to_valuator_button"), id: "js-submit-assign-questions-to-valuator", class: "button small button--simple float-left") %>

    <button id="js-cancel-assign-questions-to-valuator" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.questions.admin.questions.index.cancel") %></button>
  <% end %>
</div>
